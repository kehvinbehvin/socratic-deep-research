{
  "name": "relocate-v5",
  "version": "1.0.0",
  "description": "AI-driven Socratic learning platform",
  "main": "src/app.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "dev:build": "tsc -w",
    "web:start": "ts-node src/app.ts",
    "dev:start": "serverless offline start --noPrependStageInUrl --httpPort 3000",
    "dev": "concurrently \"npm run dev:build\" \"npm run dev:start\"",
    "services:up": "docker compose up -d",
    "services:down": "docker compose down",
    "services:clean": "docker compose down -v",
    "services:logs": "docker compose logs -f",
    "test:local": "npm run services:clean && npm run services:up && sleep 5 && npm run dev",
    "test:topic": "curl -X POST http://localhost:3000/api/topics -H 'Content-Type: application/json' -d '{\"content\": \"Understanding TypeScript Generics\"}'",
    "test:question": "curl -X POST http://localhost:3000/api/questions -H 'Content-Type: application/json' -d '{\"topicId\": \"TOPIC_ID\", \"content\": \"How do conditional types work in TypeScript?\"}'",
    "test:reflection": "curl -X POST http://localhost:3000/api/reflections -H 'Content-Type: application/json' -d '{\"questionId\": \"QUESTION_ID\", \"content\": \"Conditional types allow us to create type definitions that depend on other types...\"}'",
    "logs": "tail -f logs/combined.log | pino-pretty",
    "metrics": "tail -f logs/metrics.log | pino-pretty"
  },
  "keywords": [
    "learning",
    "ai",
    "socratic",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@serverless/utils": "^6.15.0",
    "@types/aws-lambda": "^8.10.134",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "serverless": "^4.4.10",
    "serverless-offline": "^14.3.4",
    "serverless-offline-sqs": "^8.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.821.0",
    "@aws-sdk/client-sqs": "^3.525.0",
    "@langchain/core": "^0.3.57",
    "@langchain/openai": "^0.5.11",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.2",
    "@types/pino": "^7.0.5",
    "@types/winston": "^2.4.4",
    "axios": "^1.9.0",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "langchain": "^0.3.27",
    "openai": "^5.0.2",
    "pg": "^8.11.3",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.1",
    "typeorm": "^0.3.20",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  }
}
